{
 "env": {
  "browser": true,
  "node": true
  // "es6": true
 },
 "extends": ["airbnb-base"],

 "globals": {
  "Atomics": "readonly",
  "SharedArrayBuffer": "readonly"
 },
 // "plugins": ["prettier"],
 "rules": {
  // "prettier/prettier": "error",
  "no-param-reassign": [
   "error",
   {
    "props": false
   }
  ],
  "max-len": [
   "warn",
   {
    "code": 120
   }
  ],
  "arrow-parens": ["error", "as-needed"],
  "no-plusplus": "off",
  "indent": ["error", 2]
 },
 "parser": "babel-eslint",
 "parserOptions": {
  "ecmaVersion": 2020,
  "sourceType": "module",
  "ecmaFeatures": {
   // "jsx": true
  }
 }
}
